    "progression_models": {
      "constant": {
        "description": "Leak area remains constant over time",
        "formula": "A(t) = A_initial"
      },
      "linear": {
        "description": "Linear progression from initial to final area",
        "formula": "A(t) = A_initial + (A_final - A_initial) * (t / t_duration)"
      },
      "exponential": {
        "description": "Exponential growth with specified growth rate",
        "formula": "A(t) = A_initial * exp(growth_rate * t)"
      },
      "sigmoid": {
        "description": "S-curve progression for pressure bursts",
        "formula": "A(t) = A_initial + (A_final - A_initial) / (1 + exp(-k * (t - t_midpoint)))"
      },
      "power_law": {
        "description": "Power law progression for erosion",
        "formula": "A(t) = A_initial * (1 + t/t_ref)^exponent"
      },
      "instantaneous": {
        "description": "Immediate jump to final area",
        "formula": "A(t) = A_final for t > 0"
      }
    },
