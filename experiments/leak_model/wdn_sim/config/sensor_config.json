{
    "description": "Realistic ultrasonic clamp-on flow meter specifications for sensor simulation",
    "sensor_models": [
      {
        "id": "gentos_GFR_DN20",
        "specifications": {
          "transit_time_resolution_ns": 0.1,
          "flow_accuracy_percent": 2.0,
          "repeatability_percent": 0.4,
          "sampling_rate_hz": 10.0,
          "measurement_range": {
            "min_velocity_m_s": 0.3,
            "max_velocity_m_s": 5,
            "min_pipe_diameter_mm": 19,
            "max_pipe_diameter_mm": 32
          }
        }
      }
    ],
    "ultrasonic_physics": {
      "transducer_configuration": {
        "standard_angles_deg": [45, 60, 90],
        "preferred_angle_deg": 60,
        "path_configurations": {
          "single_traverse": {
            "description": "Single diagonal path through pipe",
            "accuracy_factor": 1.0,
            "signal_strength_factor": 1.0
          },
          "double_traverse": {
            "description": "Two diagonal paths (W-pattern)",
            "accuracy_factor": 0.7,
            "signal_strength_factor": 0.8
          },
          "quadruple_traverse": {
            "description": "Four diagonal paths (W-pattern)",
            "accuracy_factor": 0.5,
            "signal_strength_factor": 0.6
          }
        }
      },
      "sound_speed_regression": {
        "temperature_dependence": {
          "water_formula": "c = 1404.3 + 4.7*T - 0.04*T^2",
          "temperature_range_C": [0, 40],
          "pressure_correction_factor": 1.0002
        },
        "pipe_material_effects": {
          "Copper": {
            "sound_speed_m_s": 5010,
            "attenuation_db_mm": 0.5
          },
          "PEX-A": {
            "sound_speed_m_s": 1950,
            "attenuation_db_mm": 2.5
          },
          "PEX-B": {
            "sound_speed_m_s": 1950,
            "attenuation_db_mm": 2.8
          },
          "CPVC": {
            "sound_speed_m_s": 2200,
            "attenuation_db_mm": 1.8
          }
        }
      }
    },
    "noise_characteristics": {
      "electronic_noise": {
        "description": "Internal sensor electronics noise",
        "time_jitter_ns": {
          "baseline_std": 0.05,
          "temperature_coefficient_ns_C": 0.002,
          "aging_drift_ns_year": 0.01
        },
        "amplitude_noise": {
          "snr_db_typical": 45,
          "snr_db_range": [35, 55]
        }
      },
      "acoustic_noise": {
        "description": "Environmental acoustic interference",
        "sources": {
          "pipe_vibration": {
            "frequency_range_hz": [10, 200],
            "amplitude_factor": [0.8, 1.5]
          },
          "flow_turbulence": {
            "reynolds_dependency": "log",
            "amplitude_factor": [0.9, 2.0]
          },
          "external_vibration": {
            "frequency_range_hz": [1, 1000],
            "amplitude_factor": [0.5, 3.0]
          }
        }
      },
      "thermal_noise": {
        "description": "Temperature-related measurement drift",
        "temperature_coefficient": {
          "time_measurement_ppm_C": 50,
          "coupling_efficiency_percent_C": 0.5
        },
        "thermal_time_constant_s": 300
      }
    },
    "signal_quality_factors": {
      "coupling_efficiency": {
        "description": "Acoustic coupling between transducer and pipe",
        "factors": {
          "surface_roughness": {
            "smooth": 1.0,
            "moderate": 0.8,
            "rough": 0.6,
            "very_rough": 0.4
          },
          "coupling_gel_quality": {
            "fresh": 1.0,
            "aged_good": 0.9,
            "aged_poor": 0.7,
            "dry": 0.3
          },
          "installation_pressure": {
            "optimal": 1.0,
            "light": 0.8,
            "excessive": 0.9
          }
        }
      },
      "signal_reflections": {
        "internal_deposits": {
          "clean": 1.0,
          "light_deposits": 0.9,
          "moderate_deposits": 0.7,
          "heavy_deposits": 0.4
        }
      },
      "flow_profile_effects": {
        "description": "Non-uniform flow profile impact on accuracy",
        "profile_types": {
          "fully_developed": 1.0,
          "developing": 0.8,
          "disturbed": 0.6,
          "highly_disturbed": 0.4
        },
        "reynolds_number_effects": {
          "laminar": 0.7,
          "transitional": 0.9,
          "turbulent": 1.0
        }
      }
    },
    "measurement_uncertainties": {
      "systematic_errors": {
        "calibration_drift_percent_year": [0.1, 0.5],
        "temperature_bias_percent_C": 0.05,
        "pressure_bias_percent_bar": 0.02
      },
      "random_errors": {
        "measurement_noise_percent": [0.5, 2.0],
        "flow_pulsation_sensitivity": 1.2,
        "electrical_interference_factor": [0.9, 1.1]
      }
    },
    "data_quality_simulation": {
      "missing_data": {
        "probability_per_sample": 0.001,
        "burst_missing_probability": 0.0001,
        "burst_duration_samples": [10, 100]
      },
      "outliers": {
        "probability_per_sample": 0.0005,
        "magnitude_factor_range": [2.0, 10.0],
        "clustering_probability": 0.1
      },
      "sensor_failures": {
        "temporary_failure": {
          "probability_per_day": 0.001,
          "duration_minutes": [5, 60]
        },
        "degraded_performance": {
          "probability_per_month": 0.01,
          "accuracy_degradation_factor": [1.5, 3.0],
          "duration_days": [1, 30]
        }
      }
    },
    "installation_quality_factors": {
      "pipe_access": {
        "ideal": {
          "straight_section_length_diameters": 10,
          "accuracy_factor": 1.0
        }
      },
      "environmental_conditions": {
        "indoor_controlled": {
          "temperature_stability_C": 17,
          "accuracy_factor": 1.0
        }
      }
    },
    "measurement_outputs": {
      "primary_measurements": {
        "transit_time_upstream_ns": {
          "description": "Upstream transit time measurement",
          "typical_range_us": [10, 100],
          "resolution_ns": "sensor_dependent"
        },
        "transit_time_downstream_ns": {
          "description": "Downstream transit time measurement", 
          "typical_range_us": [10, 100],
          "resolution_ns": "sensor_dependent"
        },
        "delta_time_ns": {
          "description": "Transit time difference",
          "typical_range_ns": [-1000, 1000],
          "resolution_ns": "sensor_dependent"
        }
      },
      "derived_measurements": {
        "flow_rate_L_s": {
          "description": "Volumetric flow rate",
          "calculation": "based on delta_time and pipe geometry"
        },
        "velocity_m_s": {
          "description": "Average pipe velocity",
          "calculation": "flow_rate / pipe_cross_sectional_area"
        },
        "totalizer_L": {
          "description": "Cumulative volume",
          "integration_method": "trapezoidal"
        }
      },
      "quality_indicators": {
        "signal_strength_db": {
          "typical_range": [20, 60],
          "minimum_acceptable": 30
        },
        "signal_quality_percent": {
          "calculation": "composite of SNR, reflections, coupling",
          "range": [0, 100]
        },
        "measurement_confidence": {
          "calculation": "based on signal quality and flow conditions",
          "range": [0, 1]
        }
      }
    }
  }  
